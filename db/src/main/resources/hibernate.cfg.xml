<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
    	<!-- Database connection settings -->
    	<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/refrigerator</property>
        <property name="hibernate.connection.username">refrigerator</property>
        <property name="hibernate.connection.password">123</property>
        <!-- SQL dialect -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
   		<property name="hibernate.connection.CharSet">utf8</property>
        <property name="hibernate.connection.characterEncoding">utf8</property>
        <property name="hibernate.connection.useUnicode">true</property>
        <property name="connection_pool_size">10</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property><!-- create|auto|none|update|validate -->
        
        <!-- Core module -->
        <mapping class="ru.innopolis.refrigerator.core.model.User"/>
        <mapping class="ru.innopolis.refrigerator.core.model.CookingMethod"/>
        <mapping class="ru.innopolis.refrigerator.core.model.IngredientCategory"/>
        <mapping class="ru.innopolis.refrigerator.core.model.Ingredient"/>
        <mapping class="ru.innopolis.refrigerator.core.model.Session"/>
        <mapping class="ru.innopolis.refrigerator.core.model.Refrigerator"/>
        <mapping class="ru.innopolis.refrigerator.core.model.RecipeCategory"/>
        <!--<mapping class="ru.innopolis.refrigerator.core.model.Recipe"/>-->


    </session-factory>
</hibernate-configuration>